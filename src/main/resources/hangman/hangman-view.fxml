<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="hangman.HangmanController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10"
          vgap="10">

    <!-- Login and Signup -->
    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Username"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Password"/>
    <TextField fx:id="nameField" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Name (for signup)"/>
    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Button fx:id="signupButton" text="Signup" onAction="#handleSignup" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <!-- Main Menu -->
    <Button fx:id="startGameButton" text="Start Game" onAction="#handleStartGame" GridPane.rowIndex="5"
            GridPane.columnIndex="1"/>
    <Button fx:id="viewGamesButton" text="View Games" onAction="#handleViewGames" GridPane.rowIndex="6"
            GridPane.columnIndex="1"/>
    <Button fx:id="viewLeaderboardButton" text="View Leaderboard" onAction="#handleViewLeaderboard"
            GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <!-- Game Area -->
    <GridPane fx:id="hangmanPane" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2" hgap="10"
              vgap="10"/>

    <!-- Message Label -->
    <Label fx:id="messageLabel" GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

</GridPane>
